      <h3>Cook Time: {{totalTimeInSeconds}} seconds<h3>
      <h3>Rating: {{rating}}</h3>
      <hr />
      <h4>Ingredients:</h4>
      <ul>
        {{#each ingredients}}
          <li>{{.}}</li>  
        {{/each}}
      </ul>
  </div>
